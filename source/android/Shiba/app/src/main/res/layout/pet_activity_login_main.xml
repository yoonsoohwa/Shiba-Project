<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFE"
    tools:context=".pet_Login_MainActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h1"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h2"
        app:layout_constraintGuide_percent="0.53"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h3"
        app:layout_constraintGuide_percent="0.59"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h4"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h5"
        app:layout_constraintGuide_percent="0.73"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h6"
        app:layout_constraintGuide_percent="0.83"
        android:orientation="horizontal" />


    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:src="@drawable/jbts"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="@id/h1"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintRight_toRightOf="@id/c"
        app:layout_constraintBottom_toTopOf="@id/h1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="SMART CITY"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/h2"
        app:layout_constraintTop_toBottomOf="@id/h2"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintRight_toRightOf="@id/c"/>

    <TextView
        android:id="@+id/xhdtlsrhk"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#000000"
        android:text="정보통신기기과 3학년"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/h3"
        app:layout_constraintTop_toBottomOf="@id/h3"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintRight_toRightOf="@id/c"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#BDBDBD"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@id/h4" />

    <Button
        android:id="@+id/join"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="JOIN"
        android:textColor="@android:color/black"
        android:background="@drawable/button1"
        app:layout_constraintBottom_toTopOf="@id/h5"
        app:layout_constraintTop_toBottomOf="@id/h5"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintRight_toRightOf="@id/c"/>

    <Button
        android:id="@+id/login"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="LOGIN"
        android:textColor="@android:color/black"
        android:background="@drawable/button1"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/h6"
        app:layout_constraintTop_toBottomOf="@id/h6"
        app:layout_constraintLeft_toLeftOf="@id/c"
        app:layout_constraintRight_toRightOf="@id/c"/>

</android.support.constraint.ConstraintLayout>